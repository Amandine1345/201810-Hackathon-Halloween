{% extends 'layout.html.twig' %}
{% block title %}Bonbondex{% endblock %}

{% block content %}



    <main class="bonbondex">
        <div class="row d-flex justify-content-center">
            <h1 class="col-lg-12 col-sm-8 text-center">Mon Bonbondex</h1>
        </div>
        <div class="row d-flex justify-content-around m-lg-5 p-lg-5">
            {% for item in items %}
                {% if item.quantite==1 %}
                    <div class="card search d-flex justify-content-center  mt-5 p-2" style="width: 18rem;">
                        <img class="card-img-top" src="https://via.placeholder.com/150C" alt="Card image cap">
                        <div class="card-body ">
                            <h5 class="card-title text-center">{{ item.title }}</h5>
                            <p class="card-text text-center">Quantité</p>
                            <div class="card-header d-flex justify-content-center">
                                <form action="" method="post" role="form">
                                    <input type="hidden" name="{{ item.title }}" value="{{ item.id }}">
                                    <button type="submit" class="card-link btn btn-dark" name="searchMe"
                                            data-toggle="collapse">Me trouver
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="card found d-flex justify-content-center  mt-5 p-2" style="width: 18rem;">
                        <img class="card-img-top" src="https://via.placeholder.com/150C" alt="Card image cap">
                        <div id ="texte">Trouvé</div>
                        <div class="card-body ">
                            <h5 class="card-title text-center">{{ item.title }}</h5>
                            <p class="card-text text-center">{{ item.quantite }} bonbons</p>
                            <p class="card-text text-center">Trouvé au: {{ item.adresse }} </p>

                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>


        <a class="d-flex justify-content-center" href='/'>Back<br></a>
    </main>


{% endblock %}