{% extends 'layout.html.twig' %}
{% block title %}Bonbondex{% endblock %}

{% block content %}



<main class="bonbondex">
        <div class="row d-flex justify-content-center">
            <h1 class="col-lg-12 col-sm-8 text-center" >Mon Bonbondex</h1>
        </div>
        <div class="row d-flex justify-content-around m-lg-5 p-lg-5">
            {% for item in items %}
            <div class="card d-flex justify-content-center  mt-5 p-2" style="width: 18rem;">
                <img class="card-img-top" src="https://via.placeholder.com/150C" alt="Card image cap">
                <div class="card-body ">
                    <h5 class="card-title text-center">{{ item.title }}</h5>
                    <p class="card-text text-center">Quantit√©</p>
                    <div class="card-header d-flex justify-content-center">
                        <a href="#{{ item.title }}" class="card-link btn btn-dark" data-toggle="collapse"> Montrez-moi !</a>
                    </div>
                    <div class="collapse" id="{{ item.title }}">
                        <div class="card-body">
                            <p class="card-text"> Coucou !</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>


        <a class="d-flex justify-content-center" href='/'>Back<br></a>
</main>


{% endblock %}