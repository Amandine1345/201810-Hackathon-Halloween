{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/option.css">
{% endblock %}

{% block content %}
    <section>
        <audio id="audioPlayer" src="http://s1download-universal-soundbank.com/mp3/sounds/826.mp3"></audio>
        <div class="">
            <div class="row mt-3">
                <a class="addplayer col" href='/addPlayer'>Ajouter un monstre<img class="hellCenter"
                                                                                  src="assets/images/plus.png"></a>
            </div>
        </div>
        <h1 class="titleMonster mt-5">Les monstres</h1>
        {% if session is empty %}
            <p class="centration">Veuillez choisir un monstre</p>
        {% endif %}
        <ul>
            {% for nom in noms %}
                <div class="row">
                    <form method="post" class="centrage monster col">
                        <input type="hidden" value="{{ nom.id }}" name="id">
                        <input type="submit" value="{{ nom.nom }}" name="nom">
                    </form>
                    <a href="/players/{{ nom.id }}"> <img class="hell col" src="assets/images/graves.png"> </a>
                </div>
            {% endfor %}
        </ul>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var player = document.querySelector('#audioPlayer');
        player.play();
    </script>
{% endblock %}